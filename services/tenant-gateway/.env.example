PORT=3000
NODE_ENV=production

# Redis (Rate Limiting)
REDIS_URL=redis://redis:6379

# Security: CORS Allowed Origins (comma-separated)
# Local development: http://localhost:5173,http://localhost:3000,http://localhost:4173
# Production example: https://app.yourdomain.com,https://yourdomain.com,*.yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Auth database connection (for tenant lookup)
AUTH_DB_HOST=postgres
AUTH_DB_PORT=5432
AUTH_DB_NAME=auth_db
AUTH_DB_USER=postgres
AUTH_DB_PASSWORD=postgres

# Service URLs
AUTH_SERVICE_URL=http://auth-service:3001
QR_SERVICE_URL=http://qr-service:3002
MICROSITE_SERVICE_URL=http://microsite-service:3003
ANALYTICS_SERVICE_URL=http://analytics-service:3004
DOMAINS_SERVICE_URL=http://domains-service:3005
PIXELS_SERVICE_URL=http://pixels-service:3006
ROUTING_SERVICE_URL=http://routing-service:3007
