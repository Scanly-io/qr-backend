# QR Service Environment Variables

# Server Configuration
PORT=3002
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/qr_platform

# Redis Cache
REDIS_URL=redis://localhost:6379
# REDIS_URL=redis://redis:6379  # Docker

# Kafka/Message Queue
KAFKA_BROKERS=localhost:9092
# KAFKA_BROKERS=kafka:9092  # Docker

# JWT Secret (for auth token verification)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Logging
LOG_LEVEL=debug
SERVICE_NAME=qr-service
