# Domains Service Configuration (Docker)
PORT=3010
HOST=0.0.0.0
SERVICE_NAME=domains-service

# Database (Docker networking)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/domains_db

# Kafka (Docker networking)
KAFKA_BROKERS=redpanda:9092

# Platform Configuration
PLATFORM_DOMAIN=proxy.yourplatform.com

# Subdomain Configuration (Linktree-style)
SUBDOMAIN_BASE=scanly.io

# Server IP (for DNS A records)
SERVER_IP=YOUR_PRODUCTION_IP

# Storage Provider
STORAGE_PROVIDER=r2

# Cloudflare R2 Configuration
AWS_REGION=auto
AWS_ACCESS_KEY_ID=your_r2_access_key_id
AWS_SECRET_ACCESS_KEY=your_r2_secret_access_key
AWS_S3_BUCKET=qr-platform-assets
CDN_DOMAIN=qr-platform-assets.YOUR_ACCOUNT_ID.r2.dev

# Cloudflare API
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_zone_id
CLOUDFLARE_ACCOUNT_ID=your_account_id

