# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/qr_analytics

# Redpanda/Kafka
REDPANDA_BROKER=localhost:9092
KAFKAJS_NO_PARTITIONER_WARNING=1

# Redis
REDIS_URL=redis://localhost:6379

# Stripe Configuration (Get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE
STRIPE_CLIENT_ID=ca_YOUR_CLIENT_ID_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# OpenAI (Get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-YOUR_OPENAI_KEY_HERE

# SendGrid (Get from https://app.sendgrid.com/settings/api_keys)
SENDGRID_API_KEY=SG.YOUR_SENDGRID_KEY_HERE

# Twilio (Get from https://console.twilio.com/)
TWILIO_ACCOUNT_SID=YOUR_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_AUTH_TOKEN

# Frontend URL (for OAuth callbacks)
FRONTEND_URL=http://localhost:5173
APP_URL=http://localhost

# JWT Secret (Generate with: openssl rand -base64 32)
JWT_SECRET=YOUR_RANDOM_SECRET_HERE

# Cloudflare R2 (Get from Cloudflare dashboard)
R2_ACCOUNT_ID=YOUR_ACCOUNT_ID
R2_ACCESS_KEY_ID=YOUR_ACCESS_KEY
R2_SECRET_ACCESS_KEY=YOUR_SECRET_KEY
R2_BUCKET_NAME=qr-images

# Mixpanel (Get from https://mixpanel.com/settings/project)
MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN

# Sentry (Get from https://sentry.io/settings/)
SENTRY_DSN=YOUR_SENTRY_DSN
