{
  "name": "qr-backend",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=@qr/qr-service\" \"npm run dev --workspace=@qr/analytics-service\"",
    "dev:all": "concurrently \"npm run dev --workspace=@qr/qr-service\" \"npm run dev --workspace=@qr/analytics-service\" \"npm run dev --workspace=@qr/auth-service\" \"npm run dev --workspace=@qr/microsite-service\" \"npm run dev --workspace=@qr/dlq-processor\" \"npm run dev --workspace=@qr/domains-service\" \"npm run dev --workspace=@qr/pixels-service\" \"npm run dev --workspace=@qr/routing-service\"",
    "dev:domains": "npm run dev --workspace=@qr/domains-service",
    "dev:pixels": "npm run dev --workspace=@qr/pixels-service",
    "dev:routing": "npm run dev --workspace=@qr/routing-service",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:auth": "vitest run --workspace=@qr/auth-service",
    "test:qr": "vitest run --workspace=@qr/qr-service",
    "test:analytics": "vitest run --workspace=@qr/analytics-service",
    "test:microsite": "vitest run --workspace=@qr/microsite-service"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "concurrently": "^9.0.0",
    "drizzle-kit": "^0.31.6",
    "tsx": "^4.8.1",
    "typescript": "^5.5.4",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@qr/common": "^1.0.0",
    "@types/pg": "^8.15.6",
    "@types/redis": "^4.0.10",
    "drizzle-orm": "^0.44.7",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "redis": "^5.10.0",
    "studio": "^0.13.5"
  }
}
